{% extends 'base.html.twig' %}

{% block title %}{% trans %}listUniverse{% endtrans %}{% endblock %}

{% block body %}
    <div class="shadow p-3 mb-5 bg-white rounded">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                {% if app.user %}
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">{% trans %}universePage.myUniverses{% endtrans %}</a>
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">{% trans %}universePage.allUniverses{% endtrans %}</a>
                {% else %}
                    <a class="nav-item nav-link active" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">{% trans %}universePage.allUniverses{% endtrans %}</a>
                {% endif %}
                {% if app.user and univForm is defined%}
                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">{% trans %}universePage.createNewUniverse{% endtrans %}</a>
                {% endif %}
            </div>
        </nav>

        <br/>

        <div class="tab-content" id="nav-tabContent">
            {% if app.user %}
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    {% for community in userCommunities %}
                        <div class="card border-dark mb-3" style="max-width: 18rem;">
                            <div class="card-header"><div class="card-title"><h5>{{ community.universe.label }}</h5></div></div>
                            <div class="card-body text-dark">
                                <p class="card-text">{{ community.universe.shortResume }}</p>
                                <p class="card-text"><small class="text-muted">{% trans %}userUniverseStatut.creator{% endtrans %} : {{ community.user.username }}</small></p>
                            </div>
                            <div class="card-header"><a class="badge badge-secondary" href="{{ path('index') }}">{% trans %}chooseUniverse{% endtrans %}</a></div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="tab-pane fade{% if not app.user %} show active {% endif %}" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                {% for community in allCommunities %}

                    <div class="card border-dark mb-3" style="max-width: 18rem;">
                        <div class="card-header"><div class="card-title"><h5>{{ community.universe.label }}</h5></div></div>
                        <div class="card-body text-dark">
                            <p class="card-text">{{ community.universe.shortResume }}</p>
                            <p class="card-text"><small class="text-muted">{% trans %}userUniverseStatut.creator{% endtrans %} : {{ community.user.username }}</small></p>
                        </div>
                        <div class="card-header"><a class="badge badge-secondary" href="{{ path('index') }}">{% trans %}chooseUniverse{% endtrans %}</a></div>
                    </div>

                {% endfor %}
            </div>

            {% if app.user and univForm is defined %}
                <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                    {{ form_start(univForm) }}
                        <div class="form-group row">
                            {{ form_label(univForm.label , 'formUniv.name',{'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(univForm.label, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    <div class="form-group row">
                        {{ form_label(univForm.resumeUniverse , 'formUniv.resumeUniverse',{'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(univForm.resumeUniverse, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(univForm.shortResume , 'formUniv.shortResume',{'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(univForm.shortResume, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(univForm.rules , 'formUniv.rules',{'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(univForm.rules, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">{% trans %}formUniv.create{% endtrans %}</button>
                    {{ form_end(univForm) }}
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}
