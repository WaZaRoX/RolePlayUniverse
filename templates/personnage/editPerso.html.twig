{% extends 'base.html.twig' %}

{% block title %}{% trans %}persoPage.editPersonnage{% endtrans %}{% endblock %}

{% block body %}
<h2>{% trans %}persoPage.editPersonnage{% endtrans %}</h2>
	{% if app.user  %}
		{% if persoForm is defined %}
			<div class="shadow p-3 mb-5 bg-white rounded">
				{{ form_start(persoForm) }}
				<div class="form-group row">
					{{ form_label(persoForm.nom , 'form.lastname',{'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
					<div class="col-sm-10">
						{{ form_widget(persoForm.nom, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="form-group row">
					{{ form_label(persoForm.prenom , 'form.firstname',{'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
					<div class="col-sm-10">
						{{ form_widget(persoForm.prenom, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="form-group row">
					{{ form_label(persoForm.date_naissance, 'form.dateNais',{'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
					<div class="col-sm-10">
						{{ form_widget(persoForm.date_naissance, {'attr': {'class': ''}}) }}
					</div>
				</div>

				<div>
					{{ form_label(persoForm.parents) }}
					{% for parent in persoForm.parents %}
						{{ form_row(parent) }}
					{% endfor %}
				</div>


				<button type="submit" class="btn btn-primary">{% trans %}form.submit{% endtrans %}</button>
				{{ form_end(persoForm) }}
			</div>
		{% else %}
			<div class="alert alert-danger" role="alert">{% trans %}error{% endtrans %} !</div>
		{% endif %}
	{% else %}
		<div class="alert alert-danger" role="alert">{% trans %}persoPage.youHaveToBeConnected{% endtrans %} !</div>
	{% endif %}
{% endblock %}